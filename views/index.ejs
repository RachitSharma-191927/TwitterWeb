<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter Frontend</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/0eaae9cbe1.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Foundation:wght@500&family=Raleway&display=swap"
        rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="Images/TitleIcon.png">
</head>

<body>
    <div class="wholeContainer">
        <div class="imgs"><img src="Images/TwitterFrontendHead.avif" alt="" id="timage"></div>
        <div class="data">
            <div>
                <img src="Images/TwitterIcon.png" alt="" id="ticon">
            </div>
            <div>
                <h1 id="happen">Happening now</h1>
            </div>
            <div>
                <h1 id="text">Join Twitter today.</h1>
            </div>
            <div style="color:rgb(207, 46, 46);" class="mt-3 p-1">
                <h5> <%=failure%></h5>
             </div>
            <div class="buttons">
                <button> <i class="fa fa-google"></i> <a href="/login/google" style="text-decoration: none;">Sign up
                        with
                        Google</a></button>
                <div>or</div>
                <button data-bs-toggle="modal" data-bs-target="#signUp">Sign up with Email</button>
                <div id="terms">By signing up, you agree to the <a href="https://twitter.com/en/tos">Terms of
                        Service</a> and <a href="https://twitter.com/en/privacy">Privacy
                        Policy</a>, including <a
                        href="https://help.twitter.com/en/rules-and-policies/twitter-cookies">Cookie
                        Use</a> .</div>
                <div id="texts">Already have an account ?</div>
                <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">Sign in</button>
            </div>
        </div>
    </div>
    <footer>
        <ul id="bottom">
            <li>About</li>
            <li>Help&nbsp;Center</li>
            <li>Terms&nbsp;of&nbsp;Service</li>
            <li>Privacy&nbsp;Policy</li>
            <li>Cookie&nbsp;Policy</li>
            <li>Accesibility</li>
            <li>Ads&nbsp;info</li>
            <li>Blog</li>
            <li>Status</li>
            <li>Carrers</li>
            <li>Brand&nbsp;Resources</li>
            <li>Advertising</li>
            <li>Marketing</li>
            <li>Twitter&nbsp;for&nbsp;Business</li>
            <li>Developers</li>
            <li>Directory</li>
            <li>Settings</li>
            <li>&#169;&nbsp;2022&nbsp;Rachit&nbsp;Sharma</li>
        </ul>
    </footer>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content bg-black text-white">
                <div class="modal-header">
                    <h4 class="modal-title w-100" id="exampleModalLabel">Sign In</h4>
                    <button type="button" class="btn-close btn-light" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/signin" method="post">
                        <div class="d-flex flex-column align-items-center flex">
                            <input type="email" id="email" class="w-100" name="email" placeholder="Enter Your Email"
                                required autocomplete="off">
                            <input type="password" id="password" class="w-100" name="password"
                                placeholder="Enter Your Password" required autocomplete="off">
                            <button class="btn bg-black text-white border-white w-50">Sign In</button>
                        </div>
                    </form>

                    <!-- <div class="d-flex flex-column justify-content-center align-items-center">
                        <div>OR</div>
                        <button type="button" class="btn bg-black text-white border-white w-75">
                            <a href="/signin/google" class="text-white" style="text-decoration: none;">Sign In
                                with
                                Google</a>&nbsp;
                            <i class="fa fa-google"></i></button>
                    </div> -->
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="signUp" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content bg-black text-white">
                <div class="modal-header">
                    <h4 class="modal-title w-100" id="exampleModalLabel">Create Your
                        Account</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/signup" method="post">
                    <div class="modal-body d-flex flex-column">
                        <input type="text" id="name" name="name" placeholder="Enter Your Name" required>
                        <input type="email" id="email" name="email" placeholder="Enter Your Email" required>
                        <input type="password" id="password" name="password" placeholder="Password" required>
                        <input type="password" id="confirmPassword" name="confirmPassword"
                            placeholder="Confirm Your Password" required>
                        <div class="d-flex justify-content-center">
                            <button class="w-50 bg-black text-white border-white">Sign Up</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
            integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
            integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
            crossorigin="anonymous"></script>
</body>

</html>